<%- include('header.ejs'); -%>

<div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
</div>
<div class="box">
    <% for(let items of newListItems) {%>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= items._id %>" onchange="this.form.submit()">
            <p><%= items.name %> </p>
            <input type="hidden" name="listName" value="<%= listTitle %>">
        </div>
    </form>
    <%}%>  

        <form action="/" method="post" class="item">
            <input type="text" name="newItem" id="newItem" autocomplete="off" placeholder="+ New Item" required>
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
    </form>
</div>

<%- include('footer.ejs'); -%>